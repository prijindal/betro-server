{
  "name": "betro-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "build:docker": "npm run pkg:server && npm run pkg:migrate && docker build -t betro/server .",
    "docker:publish": "docker push betro/server:latest",
    "pkg:server": "pkg -t node14-linux-x64 --out-path dist/linux-x64 dist/server.js",
    "pkg:migrate": "pkg -t node14-linux-x64 --out-path dist/linux-x64/migrate dist/migrate.js",
    "migrate": "ts-node src/migrate",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier src test --write",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --coverage --verbose --forceExit --runInBand",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon -w dist dist/server.js",
    "watch-ts-node": "nodemon -w src --exec ./node_modules/.bin/ts-node src/server.ts",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "pre-commit": [
    "lint",
    "prettier"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "casual": "^1.6.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "express-validator": "^6.14.0",
    "express-ws": "^5.0.2",
    "helmet": "^5.0.2",
    "ioredis": "^4.28.5",
    "jpeg-js": "^0.4.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "pino": "^7.8.1",
    "postgres-migrations": "^5.3.0",
    "rate-limit-redis": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "throttle-debounce": "^3.0.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.3",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@betro/client": "0.0.3",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-ws": "^3.0.1",
    "@types/ioredis": "^4.28.8",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.21",
    "@types/pg": "^8.6.5",
    "@types/rate-limit-redis": "^1.7.4",
    "@types/throttle-debounce": "^2.1.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
