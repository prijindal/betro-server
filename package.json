{
  "name": "betro-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "db:clean": "ts-node src/scripts/clean",
    "db:migrate": "ts-node src/scripts/migration",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier src test --write",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --coverage --verbose --forceExit --runInBand",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon -w dist dist/server.js",
    "watch-ts-node": "nodemon -w src --exec ts-node src/server.ts",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "pre-commit": [
    "lint",
    "prettier"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "express-validator": "^6.12.1",
    "express-ws": "^5.0.2",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "ioredis": "^4.27.6",
    "jpeg-js": "^0.4.3",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.7",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "pino": "^6.12.0",
    "postgres-migrations": "^5.2.0",
    "rate-limit-redis": "^2.1.0",
    "throttle-debounce": "^3.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-ws": "^3.0.1",
    "@types/faker": "^5.5.7",
    "@types/ioredis": "^4.26.6",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.3",
    "@types/pg": "^8.6.1",
    "@types/pino": "^6.3.9",
    "@types/rate-limit-redis": "^1.7.2",
    "@types/throttle-debounce": "^2.1.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "betro-js-client": "git+https://prijindal@github.com/betro-app/betro-js-client.git#ff30a0a7c7b1bdf4c23dd4b7e256597063e07d26",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
